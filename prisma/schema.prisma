generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  email         String?       @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole      @default(USER)
  isVip         Boolean       @default(false)
  files         File[]        @relation("UserFiles")
  shareLinks    ShareLink[]   @relation("UserShareLinks")
  transactions  Transaction[]
}

model Transaction {
  id              String   @id @default(uuid())
  userId          String
  amount          Float
  orderId         String   @unique
  status          String   @default("PENDING")
  transactionDate DateTime @default(now())
  description     String?
  user            User     @relation(fields: [userId], references: [id])
}

model File {
  id          String       @id @default(uuid())
  ownerId     String
  shareLinkId String
  filename    String
  size        Int
  mime        String
  url         String
  createdAt   DateTime     @default(now())
  emailShares EmailShare[]
  owner       User         @relation("UserFiles", fields: [ownerId], references: [id])
  shareLink   ShareLink    @relation(fields: [shareLinkId], references: [id])
}

model ShareLink {
  id             String    @id @default(uuid())
  token          String    @unique
  passwordHash   String?
  expiredAt      DateTime?
  maxDownloads   Int?
  downloadsCount Int       @default(0)
  createdAt      DateTime  @default(now())
  creatorId      String
  title          String
  message        String?
  files          File[]
  creator        User      @relation("UserShareLinks", fields: [creatorId], references: [id])
}

model EmailShare {
  id             String   @id @default(uuid())
  fileId         String
  recipientEmail String
  sentAt         DateTime @default(now())
  token          String   @unique
  file           File     @relation(fields: [fileId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}
